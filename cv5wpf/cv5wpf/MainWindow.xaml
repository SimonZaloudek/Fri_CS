<Window x:Class="cv5wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cv5wpf"
        mc:Ignorable="d"
        Title="MyFirstWPF" Height="450" Width="800">
    <Grid>
        <Button x:Name="button1" Click="button1_Click" BorderThickness="3,3,3,3" Height="70" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="150" MinHeight="70" Margin="0,42,0,0">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <TextBlock x:Name="tb1" FontSize="20" FontStyle="Oblique"><Run Text="Show Hello "/><InlineUIContainer>
                    <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f1/Heart_coraz%C3%B3n.svg/640px-Heart_coraz%C3%B3n.svg.png" Height="36" Width="33"/>
                </InlineUIContainer></TextBlock>
        </Button>
    </Grid>
</Window>
